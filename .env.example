# Vanilla GenAI Stack - Environment Variables Example
# Copy this file to .env and fill in the values

# Docker Compose Configuration
PROJECT_NAME=vanilla-genai

# Service Endpoints (for external services)
# Uncomment and set these when using external services
# SQL_DB_HOST=
# SQL_DB_DASHBOARD_HOST=

# Database Configuration
SQL_DB_HOST=sql-db
SQL_DB_PORT=60000
SQL_DB_USER=postgres
SQL_DB_PASSWORD=
SQL_DB_NAME=vanilla_genai
# Additional DB users (for application use)
SQL_DB_APP_USER=app_user
SQL_DB_APP_PASSWORD=

# SQL DB Dashboard Configuration
SQL_DB_DASHBOARD_PORT=60001
SQL_DB_DASHBOARD_EMAIL=admin@example.com
SQL_DB_DASHBOARD_PASSWORD=
SQL_DB_DASHBOARD_SERVER_MODE=False

# Graph Database (Neo4j) Configuration
GRAPH_DB_HOST=graph-db
GRAPH_DB_PORT=60002
GRAPH_DB_DASHBOARD_PORT=60003
GRAPH_DB_USER=neo4j
GRAPH_DB_PASSWORD=
# Neo4j format: username/password
GRAPH_DB_AUTH=neo4j/

# Ollama Configuration
OLLAMA_PORT=60004

# GPU configuration for prod-gpu flavor
PROD_ENV_CPUS=2
PROD_ENV_MEM_LIMIT=8g